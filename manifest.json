{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "1.0",
  "description": "Convert HTML content or selected text to Markdown format with main content extraction capability",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "notifications",
    "commands"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "convert-to-markdown": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Convert selected or main content of the page to Markdown"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/turndown.js",
        "lib/Readability.js",
        "lib/turndown-plugin-gfm.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
